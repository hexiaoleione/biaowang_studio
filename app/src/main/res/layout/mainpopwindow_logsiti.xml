<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22000000"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/adv_bg"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        
         />

    <TextView
        android:id="@+id/pay_ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/adv_bg"
        android:layout_alignTop="@+id/adv_bg"
        android:background="@drawable/closewhitebar_48" />

    <Button
        android:id="@+id/btnsaves_panse"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/adv_bg"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_orange_to_gray_rouded"
        android:text="了解详情"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="14sp" />
</RelativeLayout>
</RelativeLayout>