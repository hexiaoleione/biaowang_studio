<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@drawable/corners_bg" >

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="2016-08-98"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_Order_finish"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/escort_finisflag"
        android:visibility="gone" 
        />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@id/text_time"
        android:layout_below="@id/text_time"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/lout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lout4"
        android:layout_alignRight="@id/iv_img"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用："
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50元"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_img"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品名称："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-08-98"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lout1"
        android:layout_below="@id/lout1"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_nameTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-08-98"
            android:textSize="12sp" />
    </LinearLayout>
 <TextView
     		android:id="@+id/replaceMoney"
             android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@id/lout2"
            android:layout_below="@id/lout2"
            android:text="代"
            android:layout_marginTop="5dp"
            android:textColor="@color/orange1"
            android:visibility="gone"
            android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/lout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/replaceMoney"
        android:layout_below="@id/replaceMoney"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的地："
            android:textSize="12sp" />

        <com.hex.express.iwant.views.MarqueeTextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="2016-08-98都算得上是实打实的"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lout3"
        android:layout_below="@id/lout3"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离："
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-08-98"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/lout1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/xinxi_bar"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/right_bar1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_details"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/right_bar1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_distance"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_phone"
        android:layout_marginRight="20dp"
        android:background="@drawable/yabiao_img"
        android:visibility="gone" />

</RelativeLayout>