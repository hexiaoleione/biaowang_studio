<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/kuang"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="李白" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_name"
        android:text="北京" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_name"
        android:layout_toRightOf="@id/tv_address" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/x" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="4dp"
        android:text="寄件人:"
        android:textColor="#aaaaaa" />

    <TextView
        android:id="@+id/tv_send_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="4dp"
        android:text="马克思"
        android:textColor="#aaaaaa"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_send_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send"
        android:layout_marginTop="4dp"
        android:text="所在地区:"
        android:textColor="#aaaaaa" />

    <TextView
        android:id="@+id/tv_send_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="4dp"
        android:text="朝阳区"
        android:textColor="#aaaaaa"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send_add"
        android:layout_marginTop="4dp"
        android:text="地址："
        android:textColor="#aaaaaa" />

    <TextView
        android:id="@+id/tv_address_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send_add"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="4dp"
        android:text="丰台区"
        android:textColor="#aaaaaa"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_add"
        android:layout_marginTop="4dp"
        android:text="手机号："
        android:textColor="#aaaaaa" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_add"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="4dp"
        android:text="11222222222"
        android:textColor="#aaaaaa"
        android:textSize="12sp" />

    <LinearLayout
         android:id="@+id/tv_default_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_phone"
        android:orientation="horizontal" 
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="编辑"
            android:textColor="@color/orange1"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/my_add" />
    </LinearLayout>

</RelativeLayout>