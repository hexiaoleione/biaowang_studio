<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="@color/huise"
    android:orientation="vertical" >
<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/huise"
    android:orientation="vertical"
    ><RelativeLayout
        android:id="@+id/rl_bannerTip"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/guang_bg"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我要晋级，成为镖师"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:padding="3dp"
            android:visibility="gone"
            android:src="@drawable/right_barb" />
    </RelativeLayout>
    <LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg"
   android:layout_marginLeft="10dp"
   android:layout_marginRight="10dp"
   android:layout_marginTop="10dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="寄件人"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/add" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#33aaaaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/lianxiren_bg" />

        <EditText
            android:id="@+id/edt_sendpersonname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/sendpersonname"
            android:paddingLeft="5dp"
            android:textColorHint="#44aaaaaa"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/img_sendpersonname"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:padding="5dip"
            android:src="@drawable/tongxunlu_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#33aaaaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/phone_bg" />

        <EditText
            android:id="@+id/edt_sendpersonmobile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/sendpersonmobile"
            android:paddingLeft="5dp"
            android:textColorHint="#44aaaaaa"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#33aaaaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/dingwei_bg" />

        <EditText
            android:id="@+id/edt_sendpersonaddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="当前位置"
            android:paddingLeft="5dp"
            android:textColorHint="#44aaaaaa"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_sendpersonaddress"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:text="修改"
            android:textColor="@color/common_title" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#33aaaaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:background="@drawable/juti_bg" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="详细地址"
            android:paddingLeft="5dp"
            android:textColorHint="#44aaaaaa"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#33aaaaaa" />

    <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="20dp"
        android:background="#33aaaaaa" />
 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/kuaidiyuan_bg" />

        <EditText
            android:id="@+id/et_courier"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="19dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="选择快递人员"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/img_addcouriers"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:padding="5dip"
            android:src="@drawable/peoplemoblie" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_hide"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#33aaaaaa"
        android:orientation="horizontal"
        android:visibility="gone"
         >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="收件人信息"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_add_receiver"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/add" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_show"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/receiver"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:text="收货人：" />

        <TextView
            android:id="@+id/tv_receiver"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/receiver"
            android:gravity="center_vertical"
            android:text="张三" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="13892930013" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/receiver"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:background="#33aaaaaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignLeft="@id/receiver"
            android:layout_below="@id/receiver"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="收货地址:" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_alignLeft="@id/tv_receiver"
            android:layout_below="@id/receiver"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="" />

        <ImageView
            android:id="@+id/iv_receiver_address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/receiver"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/right_bar70" />
    </RelativeLayout>

    <View
        android:id="@+id/view_show"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#33aaaaaa"
        android:visibility="gone" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_marginTop="40dp" >

    <Button
        android:id="@+id/btn_oksend"
        style="@style/btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:text="短信通知"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_oksend"
        android:layout_alignRight="@+id/btn_oksend"
        android:layout_below="@+id/btn_oksend"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/grayview1"
              android:visibility="gone"
        android:text="平台将以短信的形式通知快递员上门取件" />

    <Button
        android:id="@+id/btn_oksendphone"
        style="@style/btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="电话通知"
        android:textSize="14sp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="电话通知快递员上门取件"
    android:textColor="@color/white"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/btn"
       android:layout_marginTop="70dp"
       android:visibility="gone"
    android:textSize="12sp" />
</RelativeLayout>


    
    <RelativeLayout 
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp">
        
        
        <Button 
            android:id="@+id/btn_preferential"
            android:layout_height="fill_parent"
            android:layout_width="100dp"
            android:text="现金政策"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:background="@drawable/bg_white_rounded_stroke"
            android:visibility="gone"/>
       <!-- android:background="@drawable/bg_white_rounded_stroke" -->

        <TextView
            android:id="@+id/btn_explaination"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="使用说明"
            android:textColor="@color/gray"
            android:visibility="gone"
            android:textSize="13sp" />

    </RelativeLayout>
    </LinearLayout>

</LinearLayout>
