<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
            android:id="@+id/infor_shows"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/zilan"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:src="@drawable/back1" />

            <TextView
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btnLeft"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                 
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="订单详情"
                android:textColor="@color/whites"
                android:textSize="16sp" />
        </RelativeLayout>
   <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    > 
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >
    <TextView 
             android:id="@+id/huoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物信息"
        android:textSize="15dp"
        />
</LinearLayout>
  <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="5dp"
      android:visibility="gone"
      android:background="@color/grayview"
      />
  <TextView 
          android:id="@+id/deta_dadaotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="要求达到时间"
            android:layout_marginLeft="20dp"
         android:textSize="14sp"
         android:textColor="@color/red"
        />
  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
    >
  <TextView 
          android:id="@+id/deta_tiji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="单件规格"
         android:textSize="14sp"
        />

  <TextView
      android:id="@+id/deta_carcold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_marginRight="30dp"
      android:textColor="@color/red"
      android:textSize="14sp" />

  </RelativeLayout>
  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/deta_zhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总重量"
         android:textSize="14sp"
        />

       <TextView
           android:id="@+id/deta_jian"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:layout_marginRight="30dp"
           android:text="件数"
           android:textSize="14sp" />
      
</RelativeLayout>
<RelativeLayout 
      android:id="@+id/resonghuo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
    >
<TextView
          android:id="@+id/quhuo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="需要取货"
          android:textColor="@color/red"
          android:textSize="14sp" />

<TextView
    android:id="@+id/songhuo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginRight="30dp"
    android:text="需要送货"
    android:textColor="@color/red"
    android:textSize="14sp" />

</RelativeLayout>
<RelativeLayout
    android:id="@+id/recoldcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
           android:layout_marginRight="15dp"
               android:layout_marginTop="5dp"
            android:orientation="horizontal" 
            android:visibility="gone"
            >
                  <TextView
                      android:id="@+id/tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                 android:textColor="@color/red"
                 />

                 </RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/deta_faname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发件人"
         android:textSize="14sp"
        />

      <TextView
          android:id="@+id/deta_falianxifangshi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="30dp"
          android:text="电话"
          android:textSize="14sp" />
      
</RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="20dp"
    android:visibility="gone"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间"
        android:textSize="14sp"
        />
    
      <TextView 
          android:id="@+id/deta_fabutime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="货物信息"
         android:textSize="14sp"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    >
    
      <TextView 
     
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物名称"
        android:layout_weight="1"
         android:textSize="14sp"
         android:visibility="gone"
        />
      
</LinearLayout>
<TextView 
          android:id="@+id/jiazhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物价值"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
         android:textSize="14sp"
         android:visibility="gone"
        />

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    >
       <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="始发地："
        android:textColor="@color/red"
        android:id="@+id/textView1"/>

    <com.hex.express.iwant.views.MarqueeTextView
        android:id="@+id/deta_fahuodizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView1"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lines="2"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="北京市昌平区"
        android:textSize="14sp" />
      
</RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/deta_shouhuoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收件人"
         android:textSize="14sp"
        />

      <TextView
          android:id="@+id/deta_lianxifangshi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="30dp"
          android:text="电话"
          android:textSize="14sp" />
      
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
     >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="@color/red"
        android:text="目的地：" />

    <com.hex.express.iwant.views.MarqueeTextView
        android:id="@+id/deta_dadaodizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView2"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lines="2"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="北京市昌平区"
        android:textSize="14sp" />

</RelativeLayout>
<TextView 
        android:id="@+id/deta_fahuotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发货时间"
         android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
         android:textSize="14sp"
         android:visibility="gone"
        />




  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="10dp"
    >
    <TextView 
        android:id="@+id/deta_beizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
         android:textSize="14sp"
        />
</LinearLayout>
 <LinearLayout 
     android:id="@+id/lyagin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="10dp"
     android:gravity="center"
    >
    <Button 
        android:id="@+id/deta_agin"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="再来一单"
         style="@style/btnnew"
         android:visibility="gone"
        />
    
</LinearLayout>
<LinearLayout 
    android:id="@+id/lystb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="10dp"
     android:orientation="vertical"
    >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:gravity="center"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投保详情"
         android:textSize="14sp"
         android:layout_gravity="center"
        />
        
    </LinearLayout>
  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/huowujia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物价值"
         android:textSize="14sp"
        />

      <TextView
          android:id="@+id/huozhong"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="30dp"
          android:text="物品种类"
          android:textSize="14sp" />
      
</RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/chengxian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物价值"
         android:textSize="14sp"
        />

      <TextView
          android:id="@+id/chepan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="30dp"
          android:text="物品种类"
          android:textSize="14sp" />
      
</RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/baodanhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        />
        
    </LinearLayout>
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:gravity="center"
     android:layout_marginTop="15dp"
    >
    <TextView 
        android:id="@+id/menybao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保费"
         android:textColor="@color/red"
         android:layout_gravity="center"
        />
        
    </LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>