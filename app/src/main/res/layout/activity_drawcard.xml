                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView13"
                        android:layout_alignLeft="@+id/textView13"
