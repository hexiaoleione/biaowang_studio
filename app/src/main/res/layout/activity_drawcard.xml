                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/ll_a"
                    android:background="@color/grayview" />

                <RelativeLayout
                    android:id="@+id/ll_b"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
