                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView11"
                        android:layout_alignLeft="@+id/textView11"
                        android:text="5元现金券"
