<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <LinearLayout 
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/deta_img_heads"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="@drawable/tubgs" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/deta_img_heads"
            android:orientation="vertical" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ee"
                android:layout_toRightOf="@+id/deta_img_head"
                android:layout_weight="1"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/quote_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					 android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="名称："
                    android:textSize="14sp" />

       <TextView
           android:id="@+id/quote_juli"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/quote_name"
           android:layout_alignBottom="@+id/quote_name"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           android:text="距离"
           android:textColor="@color/red"
           android:textSize="14sp" />
               
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_phone"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ee"
                android:layout_toRightOf="@+id/deta_img_head"
                android:layout_weight="1"
                android:paddingBottom="5dp" 
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/quote_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="公司电话"
                    android:textSize="14sp" />

                 <TextView
                    android:id="@+id/quote_phones"
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                     android:layout_centerVertical="true"
                    android:background="@drawable/dianhua_50"
                     />


            </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/ee"
    android:layout_toRightOf="@+id/deta_img_head"
    android:layout_weight="1"
    android:paddingBottom="5dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="报价金额："
        android:textSize="14sp" />

    <TextView
        android:id="@+id/quote_baojia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="00"
        android:textColor="@color/red"
        android:textSize="14sp" />
</RelativeLayout>

            <RelativeLayout
                android:id="@+id/readdse"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ee"
                android:layout_toRightOf="@+id/deta_img_head"
                android:layout_weight="1"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/quote_addse3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                     android:layout_centerVertical="true"
                    android:text="货场地址："
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/quote_addse_dingwei"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/dingwei_bar"
                    android:visibility="gone"
                   />

                <com.hex.express.iwant.views.MarqueeTextView
                    android:id="@+id/quote_addse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/quote_addse3"
                    android:layout_alignBottom="@+id/quote_addse3"
                    android:layout_toRightOf="@+id/quote_addse3"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:lines="2"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="北京市昌平区"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/deta_img_hea"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/deta_img_heads"
            android:layout_alignParentTop="true"
            android:background="@drawable/yirenzheng" 
            android:visibility="gone"
            />

    </RelativeLayout>

        <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
     android:layout_marginTop="10dp"
    >
    

      
</RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
     android:layout_marginTop="5dp"
    >

       <Button
           android:id="@+id/quote_btn"
           android:layout_width="100dp"
           android:layout_height="35dp"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:textColor="@color/white"
           android:textSize="12sp"
           style="@style/btnnew"
           android:padding="5dp"
           android:text="查看详情" />

       

</RelativeLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:background="@color/huise"
    />
</LinearLayout>

</LinearLayout>