<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:orientation="vertical" >
    

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical" 
            >
            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
            android:orientation="horizontal" 
            >
                  <TextView
                  android:id="@+id/infor_time"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:text="时间"
                 android:textSize="13sp"
                 />

                 	<TextView
                 	       android:id="@+id/infor_juli"
                 	    android:layout_width="wrap_content"
                 	     android:layout_height="20dp"
                 	    android:layout_alignParentRight="true"
                 	    android:layout_alignParentTop="true"
                 	    android:layout_marginRight="23dp"
                 	    android:gravity="bottom"
                 	     android:textSize="13sp"

                 	    android:text="20km" />

                 </RelativeLayout>
                 <View 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/dividerColor"
    />
                 <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="5dp"
            android:orientation="horizontal" 
            >
                 <TextView
                android:id="@+id/infor_wupin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="物品："
                 android:textSize="12sp"
                />

                 <TextView
                     android:id="@+id/infor_jiazhi"
                     android:layout_width="wrap_content"
                     android:layout_height="15dp"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="20dp"
                     android:gravity="bottom"
                     android:text="价值"
                     android:textSize="12sp"
                     android:visibility="gone"
                      />

   </RelativeLayout>
                 <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            >
             <com.hex.express.iwant.views.MarqueeTextView
                 android:id="@+id/infor_daodadizhi"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:ellipsize="marquee"
                 android:focusable="true"
                 android:focusableInTouchMode="true"
                 android:lines="1"
                 android:marqueeRepeatLimit="marquee_forever"
                 android:scrollHorizontally="true"
                     android:layout_alignParentTop="true"
                 android:layout_toRightOf="@+id/tt1"
                 android:singleLine="true"
                 android:text=""
                 android:textSize="13sp" />

             <TextView
                 android:id="@+id/tt1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                  android:textSize="13sp"
                 android:text="目的地: " />

   </RelativeLayout>
                   
   <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
            android:orientation="horizontal" 
             android:layout_marginTop="5dp"
            >
                  <TextView
                android:id="@+id/infor_zhongliang"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:text="重量"
                android:layout_centerVertical="true"
                 android:textSize="12sp"
                 />

                 	<TextView
                 	     android:id="@+id/infor_tiji"
                 	    android:layout_width="wrap_content"
                 	     android:layout_height="15dp"
                 	    android:layout_alignParentRight="true"
                 	    android:layout_alignParentTop="true"
                 	    android:layout_marginRight="20dp"
                 	    android:gravity="bottom"
                 	    android:layout_centerVertical="true"
                 	    android:textSize="12sp"
                 	    android:text="体积" />

                 </RelativeLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
            android:orientation="horizontal" 
            >
                  <TextView
                      android:id="@+id/infor_quhuo"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:text="。"
                android:layout_centerVertical="true"
                 android:textSize="12sp"
                 android:textColor="@color/red"
                 />

                 	<TextView
                 	    android:id="@+id/infor_songhuo"
                 	    android:layout_width="wrap_content"
                 	     android:layout_height="15dp"
                 	    android:layout_alignParentRight="true"
                 	    android:layout_alignParentTop="true"
                 	    android:layout_marginRight="20dp"
                 	    android:gravity="bottom"
                 	    android:layout_centerVertical="true"
                 	    android:textSize="12sp"
                 	     android:textColor="@color/red"
                 	    android:text="。" />

                 </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
             >

            <Button
                android:id="@+id/infor_baojia"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignTop="@+id/button2"
                android:layout_centerHorizontal="true"
                android:text="报价"
                android:textSize="12sp"
               
                style="@style/btn"
                />

   <TextView
       android:id="@+id/infor_xin"
       android:layout_width="wrap_content"
       android:layout_height="20dp"
       android:layout_alignBaseline="@+id/button2"
       android:layout_alignBottom="@+id/button2"
       android:layout_alignParentRight="true"
       android:layout_marginRight="18dp"
       android:text="" />

   <Button
       android:id="@+id/button2"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_centerVertical="true"
       android:layout_toLeftOf="@+id/infor_xin"
       android:background="@drawable/hotheat_bar"
       android:visibility="gone"
        />

        </RelativeLayout>

</LinearLayout>
</LinearLayout>
</LinearLayout>