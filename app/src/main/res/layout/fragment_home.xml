<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<RelativeLayout
            android:id="@+id/infor_shows"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#fa7024"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:layout_marginLeft="20dp"
                android:src="@drawable/xintouxiang" />

            <TextView
                android:id="@+id/btnRight"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/btnLeft"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:text=""
                 android:background="@drawable/huodong_bg"
                 />

            <TextView
                 android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:background="@drawable/biao_ic"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btnRightse"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/btnRight"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/btnRight"
                android:background="@drawable/mess" />

        </RelativeLayout>
       <RelativeLayout
        android:id="@+id/lout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/infor_shows"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >
            <LinearLayout
        android:id="@+id/shunfeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginRight="5dp"
                 android:layout_marginLeft="5dp"
              android:layout_weight="1"
                 android:layout_gravity="center"
            android:orientation="horizontal" >
            <ImageView 
                android:id="@+id/shunfeng1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                 android:layout_marginRight="2dp"
                android:background="@drawable/xuanon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                 android:layout_gravity="center"
                  android:text="顺风镖"
                      android:textSize="15sp"
                 />
           </LinearLayout>
  <LinearLayout
      android:id="@+id/xianshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"
              android:layout_weight="1"
                 android:layout_gravity="center"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/xianshi1" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:layout_marginRight="2dp"
                android:background="@drawable/xuanoff"/>
            <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="#999999"
                 android:layout_gravity="center"
                  android:text="限时镖"
                  android:textSize="15sp"
                 />
           </LinearLayout> 

    
           
            <LinearLayout
                  android:id="@+id/kuaidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginRight="5dp"
              android:layout_marginLeft="5dp"
              android:layout_weight="1"
              android:layout_gravity="center"
              android:visibility="gone"
            android:orientation="horizontal" >
             <ImageView 
                   android:id="@+id/kuaidi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                 android:layout_marginRight="2dp"
                android:background="@drawable/xuanoff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                 android:layout_gravity="center"
                  android:text="叫快递"
                      android:textSize="16sp"
                 />
           </LinearLayout> 
           
            <LinearLayout
                  android:id="@+id/wuliu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginRight="5dp"
                 android:layout_marginLeft="5dp"
              android:layout_weight="1"
                 android:layout_gravity="center"
            android:orientation="horizontal" >
            <ImageView 
                 android:id="@+id/wuliu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                  android:layout_gravity="center"
                android:background="@drawable/xuanoff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                 android:layout_gravity="center"
                  android:text="物流镖"
                      android:textSize="16sp"
                 />
           </LinearLayout> 

        </LinearLayout>

        

    </RelativeLayout>
