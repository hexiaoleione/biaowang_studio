<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_downwind"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/huowu_xinxi_bg" >

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/dianhua_50" />

    <TextView
        android:id="@+id/tv_publishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="2016-08-18  18：00"
        android:textSize="10sp" />
    
    
    <LinearLayout 
        android:id="@+id/ll_arrivingTime"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_arrivingtime"
        android:orientation="horizontal">
    
    
   <TextView
        android:id="@+id/tv_arrivingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送达时间：2016-08-18 18：00"
        android:textSize="10sp"
        android:textColor="#60dcf6"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp" />

   </LinearLayout>
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@id/tv_publishTime"
        android:layout_below="@id/tv_publishTime"
        android:layout_marginTop="18dp" />

    <LinearLayout
        android:id="@+id/lout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lout4"
        android:layout_alignRight="@id/iv_img"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用："
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50元"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_publishTime"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_img"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="姓名："
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="李东博大精神"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_imgway"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lout1"
        android:layout_below="@id/lout1"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起始位置："
            android:textSize="10sp" />

        <com.hex.express.iwant.views.MarqueeTextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生命科学园创意大厦A座2-002"
            android:textSize="10sp"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lout2"
        android:layout_below="@id/lout2"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的地："
            android:textSize="10sp" />

        <com.hex.express.iwant.views.MarqueeTextView
            android:id="@+id/tv_addressTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="昌平碧水庄园"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lout3"
        android:layout_below="@id/lout3"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发时间："
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-08-08"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/lout1"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:background="@drawable/xinxi_bar"/>
    <ImageView
        android:id="@+id/iv_details"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/right_bar1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_distance"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_phone"
        android:layout_marginRight="20dp"
        android:background="@drawable/yabiao_img"
        android:visibility="gone" />

</RelativeLayout>