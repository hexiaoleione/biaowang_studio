<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!--  android:background="@drawable/bg_exerc" -->
 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="50dp"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp"
     >

        <RelativeLayout
            android:id="@+id/ll_a"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <ImageView
                android:id="@+id/img_title"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/exetc_title" />

            <TextView
                android:id="@+id/exec_substance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_left"
                android:layout_toRightOf="@+id/img_title"
                android:gravity="center_vertical"
                android:text=" 活动一：单单有提成，要or不要"
                android:ellipsize="end"
                android:maxEms="15"
                android:singleLine="true"
                android:textSize="13sp" />
            

            <ImageView
                android:id="@+id/img_lefts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/img_right" />

        </RelativeLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_a"
            android:background="@color/grayview" />
    </RelativeLayout>
</LinearLayout>
