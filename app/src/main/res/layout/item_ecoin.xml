<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/wallet_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view1"
        android:layout_marginLeft="10dp"
        android:text="流水记录名称"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/waller_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/wallet_history"
        android:layout_marginRight="65dp"
        android:layout_marginTop="5dp"
        android:text="5"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wallet_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wallet_history"
        android:layout_below="@+id/wallet_history"
        android:layout_marginTop="8dp"
        android:text="2016-12-10"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/wallet_time"
        android:background="#cdc9c4" />

</RelativeLayout>