<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HXMainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:contentDescription="@null"
            android:padding="7.5dp"
            android:src="@drawable/selector_user_main__icon" />
<!--cong_bar  orange7044_img -->
        <Button
            android:id="@+id/btnRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnLeft"
            android:layout_alignBottom="@+id/btnLeft"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/cong_bar"
             />
<!-- hannan   img2-->
        <ImageView
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/hannan" 
            />
    </RelativeLayout>
<!-- bg_main_shunfeng   bg_main_downwinds-->
<View 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#22fd7410"
    android:visibility="gone"
    />
    <LinearLayout
        android:id="@+id/ll_mainbutton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_main_shunfeng"
	    android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" 
        >

        <Button
            android:id="@+id/shunfeng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:clickable="true" />

        <Button
            android:id="@+id/fakuaidi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:clickable="true" />

        <Button
            android:id="@+id/wuliu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:clickable="true"
          
             />

        <Button
            android:id="@+id/pairenwu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:clickable="true"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_kuaidi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/rl_menusOfUser"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/onkeysend"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:paddingBottom="6.0dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6.0dp"
                android:src="@drawable/selector_onekeydelivery" />

            <ImageView
                android:id="@+id/cometopick"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:clickable="true"
                android:paddingBottom="6.0dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6.0dp"
                android:src="@drawable/selector_its_my_order_icon" 
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/myreceiptCourier"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:paddingBottom="6.0dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6.0dp"
                android:src="@drawable/selector_myreceiptcourier" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_menusOfCourier"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/btn_courierqiangdan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="6.5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6.5dp"
                android:src="@drawable/courierqiangdan" 
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btn_courierjiedan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="6.5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6.5dp"
                android:src="@drawable/selector_wodejiedan" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_send_shunfeng"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" 
        >

        <ImageView
            
            android:id="@+id/shunfengxianshi"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingBottom="6.5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="6.5dp"
            android:src="@drawable/select_btn_expbg_shunfengxianshi"  />

        <ImageView
            android:id="@+id/shunfengsuyun"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:paddingBottom="6.5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="6.5dp"
             android:src="@drawable/select_btn_expbg_shunfengsuyun" />
	<!-- select_btn_expbg_shunfengsuyun   -->
        <ImageView
            android:id="@+id/btn_shunfeng"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:paddingBottom="6.5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="6.5dp"
            android:src="@drawable/select_btn_expbg_shunfengtongcheng" />
        <!-- select_btn_expbg_shunfengtongcheng -->
    </RelativeLayout>
<!--  android:visibility="gone" -->
    <LinearLayout
        android:id="@+id/ll_send_freight"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/sendfreight"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:background="@drawable/select_btn_sendfreight"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible" >

            <Button
                android:id="@+id/downwindfreight"
                android:layout_width="70dp"
                android:layout_height="20dp"
                 android:background="@drawable/wucar_bar"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send_tasks"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/publishing_tasks"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:background="@drawable/select_btn_publishtasks"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/accept_tasks"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:background="@drawable/select_btn_expbg_accpettasks"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:clickable="true" >
            </com.baidu.mapapi.map.MapView>

            <Button
                android:id="@+id/btn_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="70dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/c" />

            <ImageView
                android:id="@+id/iv_volume"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_above="@+id/btn_location"
                android:layout_alignLeft="@+id/btn_location"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                android:background="@drawable/volumeon" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llayout_trake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/ll_update"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/bac_update"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="4dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:text="安装包正在下载中..."
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@id/tv_loading"
                    android:text="23" />

                <ProgressBar
                    android:id="@+id/pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_loading"
                    android:progressDrawable="@drawable/progressbar_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_luck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/llayout_trake1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="本期幸运单号："
                        android:textColor="@color/yellow"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1.0"
                            android:text=""
                            android:textColor="@color/yellow"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/status2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1.0"
                            android:text=""
                            android:textColor="@color/yellow"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/status3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1.0"
                            android:text=""
                            android:textColor="@color/yellow"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/status4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1.0"
                            android:text=""
                            android:textColor="@color/yellow"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/status5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1.0"
                            android:text=""
                            android:textColor="@color/yellow"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/status6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1.0"
                            android:text=""
                            android:textColor="@color/yellow"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/status7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1.0"
                            android:text=""
                            android:textColor="@color/blue"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:visibility="gone" >

                        <com.kankan.wheel.widget.WheelView
                            android:id="@+id/slot_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />

                        <com.kankan.wheel.widget.WheelView
                            android:id="@+id/slot_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />

                        <com.kankan.wheel.widget.WheelView
                            android:id="@+id/slot_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />

                        <com.kankan.wheel.widget.WheelView
                            android:id="@+id/slot_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />

                        <com.kankan.wheel.widget.WheelView
                            android:id="@+id/slot_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />

                        <com.kankan.wheel.widget.WheelView
                            android:id="@+id/slot_6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />

                        <com.kankan.wheel.widget.WheelView
                            android:id="@+id/slot_7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/status8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_mix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/transparent"
                        android:text="开始"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="帮助"
                        android:textSize="18sp"
                        android:visibility="gone" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llayout_trake1"
                    android:layout_marginTop="20dp"
                    android:background="@color/transparent"
                    android:text="确认"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_luck"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/bg_enevts" 
            />
    </FrameLayout>

</LinearLayout>