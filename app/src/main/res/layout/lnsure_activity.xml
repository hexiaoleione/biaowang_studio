<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/whites"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:src="@drawable/blake" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="投保详情"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingBottom="10dp"
            android:paddingLeft="24dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:text="说明"
            android:paddingTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btnRight"
                android:background="@color/huise" />

        </RelativeLayout>
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout 
                  android:layout_width="match_parent"
            android:layout_height="wrap_content"
                 android:orientation="vertical"
                >
        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                   android:padding="10dp"
                                android:orientation="horizontal"
                                android:background="@color/white" >
			<ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/red_xinghao" 
                        android:visibility="gone"
                         />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:text="货物价值：" />
         <EditText
                                android:id="@+id/et_insure_my"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.0"
                                android:background="@null"
                                android:hint="请填写货物真实价值"
                                 android:inputType="numberDecimal"
                                android:singleLine="true"
                                android:textSize="12sp" />
                            </LinearLayout>
                             <View
                             android:id="@+id/view2"
                             android:layout_width="match_parent"
                             android:layout_height="1dp"
                             android:background="@color/dividerColor" />
                             
      <TextView
          android:id="@+id/textVi1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="15dp"
          android:layout_toRightOf="@+id/imag2"
          android:layout_marginTop="5dp"
          android:text="请勾选投保物品种类" />
                             
                             <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="15dp"
      android:gravity="center|left"
       >



		<LinearLayout
		    android:id="@+id/lychang"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		     android:layout_weight="1"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/textVi1" >

		   <CheckBox
                             android:id="@+id/checkbox_chang"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentTop="true"
                             android:text="  常规货物"
                             style="@style/CustomCheckboxTheme"
                           />
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/lyshui"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_weight="1"
		    android:layout_below="@+id/textVi1" >

		     <CheckBox
                             android:id="@+id/checkbox_shui"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentTop="true"
                             android:text="  蔬菜水果"
                             style="@style/CustomCheckboxTheme"
                           />
		</LinearLayout>

</LinearLayout>
<LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="15dp"
       >



		<LinearLayout
		    android:id="@+id/lyleng"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		     android:layout_weight="1"
		    android:layout_alignParentLeft="true"
		    android:visibility="gone"
		    android:layout_below="@+id/textVi1" >

		    <CheckBox
                             android:id="@+id/checkbox_leng"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentTop="true"
                             android:text="  冷藏冷冻"
                             style="@style/CustomCheckboxTheme"
                           />
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/lysui"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_weight="1"
		    android:layout_below="@+id/textVi1" >

		    <CheckBox
                             android:id="@+id/checkbox_sui"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentTop="true"
                             android:text="  易碎品    "
                             style="@style/CustomCheckboxTheme"
                           />
		</LinearLayout>
</LinearLayout>
<View
                             android:layout_width="match_parent"
                             android:layout_height="1dp"
                             android:layout_marginTop="10dp"
                             android:background="@color/dividerColor" />

<TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="15dp"
          android:layout_toRightOf="@+id/imag2"
          android:layout_marginTop="5dp"
          android:text="请选择承险类型" />
<LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="15dp"
       >

			<CheckBox
                             android:id="@+id/checkbox_bao"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentTop="true"
                             android:text="  综合险"
                             style="@style/CustomCheckboxTheme"
                           />
<CheckBox
                             android:id="@+id/checkbox_baojiben"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentTop="true"
                             android:text="  基本险"
                             android:textColor="@color/black"
                             style="@style/CustomCheckboxTheme"
                             android:visibility="gone"
                           />
		<!-- <LinearLayout
		    android:id="@+id/lyzong"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/textVi1" >

		    <ImageView
		        android:id="@+id/imgzong"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/weixuanzhong" />

		    <TextView
		        android:id="@+id/tezong"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_marginLeft="5dp"
		        android:layout_toRightOf="@+id/imag2"
		        android:text="综合险" />
		</LinearLayout> -->
		
</LinearLayout>
					<View
                             android:layout_width="match_parent"
                             android:layout_height="1dp"
                             android:layout_marginTop="10dp"
                             android:background="@color/dividerColor" />
<LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                   android:padding="10dp"
                                android:orientation="horizontal"
                                android:background="@color/white" >
			<ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/red_xinghao" 
                        android:visibility="gone"
                         />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:text="车牌号：" />
         <EditText
                                android:id="@+id/et_inumber"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.0"
                                android:background="@null"
                                android:hint="请填写承运车辆车牌号"
                                android:singleLine="true"
                                android:textSize="13sp" />
                            </LinearLayout>
                            <View
                             android:layout_width="match_parent"
                             android:layout_height="1dp"
                             android:background="@color/dividerColor" />
                            
                            
                            <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_marginTop="30dp"
		    android:layout_marginLeft="15dp"
		   
		     >

		    <ImageView
		        android:id="@+id/imgbao"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"
		        android:background="@drawable/weixuanzhong" />

		  <!--   <TextView
		        android:id="@+id/tebao"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_marginLeft="5dp"
		        android:text="我已阅读并同意《" /> -->
		    <CheckBox
                             android:id="@+id/checkbox_ming"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentTop="true"
                             android:text="  我已阅读并同意"
                             android:textColor="@color/black"
                             style="@style/CustomCheckboxTheme"
                           />
		     <TextView
		         android:id="@+id/toubao"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_marginLeft="5dp"
		        android:textColor="@color/red"
		        android:text="《投保协议》" />
		      <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_marginLeft="5dp"
		        
		        android:text="" />
		</LinearLayout>
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="30dp"
		    >

		    <Button
		        android:id="@+id/butsumit"
		        style="@style/btnnew"
		        android:layout_width="120dp"
		        android:layout_height="35dp"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="true"
		        android:text="提  交" />

		</RelativeLayout>
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="30dp"
		    ></LinearLayout>
		</LinearLayout>
        </ScrollView>
</LinearLayout>
