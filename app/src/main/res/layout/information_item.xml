<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/graywhite"
    android:orientation="vertical" >
    

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/corners_bg"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical" 
            >
            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
            android:orientation="horizontal" 
            >
                  <TextView
                  android:id="@+id/infor_time"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:text="dizhi"
                 android:textSize="13sp"
                 />

                 	<TextView
                 	       android:id="@+id/infor_juli"
                 	    android:layout_width="wrap_content"
                 	     android:layout_height="20dp"
                 	    android:layout_alignParentRight="true"
                 	    android:layout_alignParentTop="true"
                 	    android:layout_marginRight="23dp"
                 	    android:gravity="bottom"
                 	     android:textSize="13sp"
                 	    android:text="20km" />

                 </RelativeLayout>
                 <View 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/dividerColor"
    />
                 <TextView
                android:id="@+id/infor_wupin"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                 android:layout_marginLeft="15dp"
                android:text="物品："
                 android:textSize="13sp"
                />
   <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
            android:orientation="horizontal" 
            >
                  <TextView
                android:id="@+id/infor_zhongliang"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:text="重量"
                 android:textSize="13sp"
                 />

                 	<TextView
                 	     android:id="@+id/infor_tiji"
                 	    android:layout_width="wrap_content"
                 	     android:layout_height="15dp"
                 	    android:layout_alignParentRight="true"
                 	    android:layout_alignParentTop="true"
                 	    android:layout_marginRight="23dp"
                 	    android:gravity="bottom"
                 	    android:textSize="13sp"
                 	    android:text="体积" />

                 </RelativeLayout>

      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
 	<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" 
            >
             <ImageView 
                 android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/star_green44"
                 />    
                 <ImageView 
                 android:layout_width="20dp"
               android:layout_height="20dp" 
                android:background="@drawable/down_red44"
                 />  
                 </LinearLayout>
		<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            >
 		<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal" 
            >

                  <TextView
                      android:id="@+id/infor_songhuodizhi"
                      android:layout_width="fill_parent"
                      android:layout_height="20dp"
                      android:layout_toLeftOf="@+id/infor_quhuo"
                      android:textSize="12sp"
                      android:gravity="left|center"
                      android:text="dizhi" />

                 	<TextView
                 	     android:id="@+id/infor_quhuo"
                 	    android:layout_width="wrap_content"
                 	     android:layout_height="20dp"
                 	    android:layout_alignParentRight="true"
                 	    android:layout_marginRight="23dp"
                 	    android:gravity="bottom"
                 	     android:textColor="@color/orange1"
                 	     android:textSize="12sp"
                 	    android:text="上门取货" />

                 </RelativeLayout>
 		
 		<RelativeLayout
            android:layout_width="wrap_content"
             android:layout_height="20dp"
            android:orientation="horizontal" 
            >

                 	<TextView
                 	      android:id="@+id/infor_songhuo"
                 	    android:layout_width="wrap_content"
                 	     android:layout_height="15dp"
                 	    android:layout_alignParentRight="true"
                 	    android:layout_marginRight="23dp"
                 	    android:gravity="bottom"
                 	      android:textColor="@color/orange1"
                 	      android:layout_centerHorizontal="true"
                 	      android:textSize="12sp"
                 	    android:text="送货上门" />

                 	<TextView
                 	    android:id="@+id/infor_daodadizhi"
                 	    android:layout_width="fill_parent"
                 	    android:layout_height="20dp"
                 	    android:layout_alignParentTop="true"
                 	    android:layout_toLeftOf="@+id/infor_songhuo"
                 	         	     android:textSize="12sp"
                 	         	      android:gravity="left|center"
                 	    android:text="ddddddd" />

                 </RelativeLayout>
                    </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
             >

            <Button
                android:id="@+id/infor_baojia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignTop="@+id/button2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/seemoney_bar"/>

   <TextView
       android:id="@+id/infor_xin"
       android:layout_width="wrap_content"
       android:layout_height="20dp"
       android:layout_alignBaseline="@+id/button2"
       android:layout_alignBottom="@+id/button2"
       android:layout_alignParentRight="true"
       android:layout_marginRight="18dp"
       android:text="" />

   <Button
       android:id="@+id/button2"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_centerVertical="true"
       android:layout_toLeftOf="@+id/infor_xin"
       android:background="@drawable/hotheat_bar" />

        </RelativeLayout>

</LinearLayout>
</LinearLayout>
</LinearLayout>