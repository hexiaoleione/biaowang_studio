<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    android:orientation="vertical" >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#fa7024"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:src="@drawable/back1" />

            <ImageView
                android:id="@+id/btnRight"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/btnLeft"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:background="@drawable/mess" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="兑换积分"
                android:textColor="@color/whites"
                android:textSize="16sp" />
        </RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ditu"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/about_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
              android:layout_alignParentTop="true"
              android:orientation="vertical"
              android:gravity="center"
              android:padding="5dp"
                 android:background="@drawable/corners_bg"
            android:layout_toLeftOf="@+id/linearLayout1">
             <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/jifenyiyuan" />
               <TextView 
                   android:id="@+id/yijifen"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="0积分"
                 />
             <Button 
                android:id="@+id/btn_yi"
                  android:layout_width="120dp"
                 android:layout_height="30dp"
                 style="@style/btn"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:text="现金券"
                 />
        </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
              android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout1"
              android:gravity="center"
                 android:background="@drawable/corners_bg"
                 android:padding="5dp"
            android:orientation="vertical">
             <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/jifenshiyuan" />
             <TextView 
                  android:id="@+id/shijifen"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0积分"
                 android:layout_marginTop="10dp"
                 />
             <Button 
                 android:id="@+id/btn_shi"
                 android:layout_width="120dp"
                 android:layout_height="30dp"
                 style="@style/btn"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:text="现金券"
                 />
        </LinearLayout>

       
    </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" 
           android:gravity="center"
          >

      </LinearLayout>

</LinearLayout>
</LinearLayout>
