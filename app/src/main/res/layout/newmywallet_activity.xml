<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    android:orientation="vertical" >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#fa7024"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:src="@drawable/back1" />

            <TextView
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/btnLeft"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="账单明细"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="个人财产"
                android:textColor="@color/whites"
                android:textSize="16sp" />
        </RelativeLayout>
        <ScrollView 
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
            >
        <LinearLayout 
            android:layout_width="match_parent"
              android:layout_height="match_parent"
               android:orientation="vertical" 
            >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/user_bj"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/wa_validBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="0"
        android:layout_marginTop="5dp"
        android:textSize="35sp" />
<LinearLayout 
     android:id="@+id/wa_transfer"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
     >
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/dollar_bg"
         />
     <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="转账"
           android:layout_marginLeft="5dp"
            android:textColor="@color/huise"
           />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/wa_validBalance"
        android:text="余额(元)"
        android:textColor="@color/white"
        android:textSize="14sp" />
<LinearLayout 
     android:id="@+id/wa_deposit"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="horizontal"
       android:layout_alignBaseline="@+id/wa_transfer"
        android:layout_alignBottom="@+id/wa_transfer"
        android:layout_centerHorizontal="true"
     >
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/trading_bg" />
    <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="提现"
           android:layout_marginLeft="5dp"
            android:textColor="@color/huise"
           />
    </LinearLayout>
 <LinearLayout 
      android:id="@+id/wa_chong"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="horizontal"
        android:layout_alignBaseline="@+id/wa_deposit"
        android:layout_alignBottom="@+id/wa_deposit"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
     >
           <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/wallet_bg" />
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="充值"
           android:layout_marginLeft="5dp"
            android:textColor="@color/huise"
           />
</LinearLayout>
</RelativeLayout>
<LinearLayout
           android:id="@+id/ll_ebi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
         android:background="@color/white"
        android:orientation="horizontal" >
   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/e_bg"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="我的积分"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
    <LinearLayout
           android:id="@+id/ll_xianjin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:orientation="horizontal" >
   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/money_bgs"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="现金券"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
    <LinearLayout
           android:id="@+id/ll_tuiguang"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:orientation="horizontal" >
   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tui_bg"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="推广收入"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
    <LinearLayout
           android:id="@+id/ll_biaoshi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:orientation="horizontal" >
   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tui_bg"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="镖师奖励"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
    <LinearLayout
           android:id="@+id/ll_dengluj"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:orientation="horizontal" >
   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tui_bg"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="登录奖励"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
