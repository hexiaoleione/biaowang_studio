<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite" >
    <RelativeLayout
        android:id="@+id/infor_shows"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#fa7024"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:src="@drawable/back1" />

            <ImageView
                android:id="@+id/btnRight"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignBaseline="@+id/btnLeft"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/wuliu_lingdang_03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="物流货源"
                android:textColor="@color/whites"
                android:textSize="16sp" />
        </RelativeLayout>
<RelativeLayout
        android:id="@+id/lout2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/infor_shows"
        android:background="@drawable/sun_map_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/changtu"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@null"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:text="附近"
                android:textColor="@color/orange1"
                android:textSize="16dp" />

            <Button
                android:id="@+id/fujin"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:text="长途"
                android:textSize="16dp" />
            <Button
                android:id="@+id/diqu"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:text="地区"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_owner"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_radius_whiteorange"
            android:orientation="vertical"
            android:padding="1dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text_recently"
                style="@style/btn_orgener_white_top"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="离我最近"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/grayview" />

            <TextView
                android:id="@+id/text_time"
                style="@style/btn_orgener_white"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="出发时间最早"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/grayview" />

            <TextView
                android:id="@+id/text_favorable"
                style="@style/btn_orgener_white_bottom"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="好评率最高"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_escort"
            android:layout_width="90dp"
            android:layout_height="115dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_radius_whiteorange"
            android:orientation="vertical"
            android:padding="1dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text_recently_escort"
                style="@style/btn_orgener_white_top"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="离我最近"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/grayview" />

            <TextView
                android:id="@+id/text_time_escort"
                style="@style/btn_orgener_white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="出发时间最早"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/grayview" />

            <TextView
                android:id="@+id/text_favorable_escort"
                style="@style/btn_orgener_white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="好评率最高"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/grayview" />

            <TextView
                android:id="@+id/text_other_escort"
                style="@style/btn_orgener_white_bottom"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="新增按钮"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>
 <com.hex.express.iwant.views.MyViewpager
        android:id="@+id/infor_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lout2" />


</RelativeLayout>