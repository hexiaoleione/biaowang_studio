<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
   >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/daifukuankuang"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
              android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textSize="13sp"
                
                 />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="11"
                android:textSize="13sp" />
         
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal" >

       <TextView
           android:id="@+id/item_wupin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_weight="1"
           android:text="重量："
            android:textSize="13sp"
            />

       <TextView
           android:id="@+id/item_baofei"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:layout_marginRight="15dp"
           android:layout_weight="1"
           android:text="体积："
           android:textSize="13sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                     android:layout_marginTop="5dp"
                     android:layout_marginRight="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="目的地: "
                         android:textSize="13sp"
                        />

                    <com.hex.express.iwant.views.MarqueeTextView
         android:id="@+id/item_dizhi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
             android:layout_toRightOf="@+id/textView2"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
         android:textSize="13sp"
        android:text="北京市昌平区"
       />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginRight="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                 android:textSize="13sp"
                android:text="收货人：" />

            <TextView
                android:id="@+id/item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_weight="0.83"
                android:text="电话："
                android:textSize="13sp" />
            
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
           />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
               android:layout_marginTop="3dp"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/item_xin"
                  android:visibility="gone"
                android:background="@drawable/lingdang" />

            <TextView
                android:id="@+id/item_xin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:text="" />
            <TextView
                android:id="@+id/item_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_alignRight="@+id/item_xin"
                android:layout_alignTop="@+id/textView1"
                android:layout_marginBottom="5dp"
                android:textSize="11sp"
                android:text="shijian" 
                android:visibility="gone"
                />

            <ImageView
        android:id="@+id/imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/toubaofukuai"
        android:scaleType="fitXY" />

        </RelativeLayout>
       
    </LinearLayout>
  
    <Button
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:background="@drawable/chakanbaojia"
          android:visibility="gone"
        android:scaleType="fitXY" />
   
    <!--  hotheat_bar_xin-->

    <Button
        android:id="@+id/button1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="140dp"
          android:visibility="gone"
        android:background="@drawable/shanchu" />

   <Button
       android:id="@+id/butt_wan"
       android:layout_width="40dp"
       android:layout_height="40dp"
        android:layout_marginTop="140dp"
       android:layout_centerHorizontal="true"
         android:visibility="gone"
       android:background="@drawable/fangdajing" 
       />

   <ImageView
       android:id="@+id/item_weizhifu"
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:layout_alignParentRight="true"
         android:visibility="gone"
       android:layout_alignParentTop="true"
       />

</RelativeLayout>

</LinearLayout>
