<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical" >
  <LinearLayout 
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/deta_img_heads"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ren3" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/deta_img_heads"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/ee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/deta_img_heads"
                android:layout_weight="1"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/quote_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="时间"
                    android:textColor="@color/grayview"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/quote_juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/deta_logoffer_username"
                    android:layout_alignBottom="@+id/deta_logoffer_username"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:text="11111"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ee"
                android:layout_toRightOf="@+id/deta_img_head"
                android:layout_weight="1"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/quote_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="公司名"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/quote_phone"
                    android:layout_width="19dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/dianhua_50"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ee"
                android:layout_toRightOf="@+id/deta_img_head"
                android:layout_weight="1"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/quote_pingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="用户评价"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/quote_cishu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="运货次数：12"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/quote_couriersscore"
                    style="@style/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/quote_pingjia"
                    android:layout_weight="2.50"
                    android:layout_marginRight="5dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.5" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ee"
                android:layout_toRightOf="@+id/deta_img_head"
                android:layout_weight="1"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/quote_addse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="地址"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/quote_addse_dingwei"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/dingwei_bar"
                    android:visibility="gone"
                   />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/deta_img_hea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/turename_img140" />

    </RelativeLayout>

        <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
     android:layout_marginTop="10dp"
    >
    <TextView 
        android:id="@+id/quote_liuyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="留言"
        />

      
</RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
     android:layout_marginTop="5dp"
    >

       <Button
           android:id="@+id/quote_btn"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:background="@drawable/shape_button"
           android:textColor="@color/white"
           android:textSize="12sp"
           android:padding="5dp"
           android:text="详情" />

       <TextView
           android:id="@+id/quote_baojia"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/quote_btn"
           android:layout_alignBottom="@+id/quote_btn"
           android:layout_alignParentRight="true"
           android:layout_marginRight="25dp"
           android:textSize="12sp"
           android:text="报价" />

</RelativeLayout>
</LinearLayout>

</LinearLayout>