<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    android:orientation="vertical" >
   <RelativeLayout
            android:id="@+id/infor_shows"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#fa7024"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:src="@drawable/back1" />

            <TextView
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btnLeft"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:text="下载保单"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="物流详情"
                android:textColor="@color/whites"
                android:textSize="16sp" />
        </RelativeLayout>
<ScrollView 
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/corners_bg"
    > 
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="10dp"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物信息"
        android:textSize="18dp"
        />
</LinearLayout>
  <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="5dp"
      android:background="@color/grayview"
      />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:visibility="gone"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间"
        android:textSize="14sp"
        />
      <TextView 
          android:id="@+id/deta_fabutime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="货物信息"
         android:textSize="14sp"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="10dp"
    >
    
      <TextView 
          android:id="@+id/huoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物名称"
        android:layout_weight="1"
         android:textSize="14sp"
        />
      
</LinearLayout>
<TextView 
          android:id="@+id/jiazhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物价值"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
         android:textSize="14sp"
         android:visibility="gone"
        />

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
     android:layout_marginBottom="5dp"
    >
       <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发货地："
        android:id="@+id/textView1"/>

    <com.hex.express.iwant.views.MarqueeTextView
        android:id="@+id/deta_fahuodizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView1"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lines="2"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="北京市昌平区"
        android:textSize="12sp" />
      
</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目的地：" />

    <com.hex.express.iwant.views.MarqueeTextView
        android:id="@+id/deta_dadaodizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView2"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lines="2"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="北京市昌平区"
        android:textSize="12sp" />

</RelativeLayout>
<TextView 
        android:id="@+id/huowulei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物类别"
         android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
         android:textSize="13sp"
        />
 <TextView 
          android:id="@+id/baoxianleibie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
        android:text="保险类别"
         android:textSize="13sp"
        />
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
    >
 <TextView 
          android:id="@+id/deta_jiazhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保额"
         android:textSize="14sp"
          android:layout_weight="1"
          android:textColor="@color/orange"
        />
 <TextView 
          android:id="@+id/deta_baofei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:text="价值"
         android:textSize="14sp"
          android:layout_weight="1"
            android:textColor="@color/orange"
        />
 </LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/deta_zhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物重量"
        android:layout_weight="1"
         android:textSize="14sp"
        />
      <TextView 
          android:id="@+id/deta_tiji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物体积"
        android:layout_weight="1"
         android:textSize="14sp"
        />
      
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
     android:visibility="gone"
    >
<TextView
          android:id="@+id/quhuo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:layout_weight="1"
          android:text="需要取货"
          android:textColor="@color/orange1"
          android:textSize="14sp" />
<TextView
        android:id="@+id/songhuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_weight="1"
        android:text="需要送货"
        android:textColor="@color/orange1"
        android:textSize="14sp" />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/deta_shouhuoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收件人姓名"
         android:textSize="14sp"
        />
      <TextView 
          android:id="@+id/deta_lianxifangshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="电话"
         android:textSize="14sp"
        />
      
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/deta_fahuoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发件人姓名"
         android:textSize="14sp"
        />
      <TextView 
          android:id="@+id/deta_falianxifangshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="电话"
         android:textSize="14sp"
        />
      
</LinearLayout>
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
     android:orientation="vertical"
    >
    <TextView 
        android:id="@+id/deta_carnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车牌号"
         android:textSize="14sp"
        />
    <TextView 
        android:id="@+id/deta_baodan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="保单"
         android:textSize="14sp"
        />
</LinearLayout>
                 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    >
</LinearLayout>
<Button 
    android:id="@+id/btn_pi"
    android:layout_width="120dp"
    android:layout_height="30dp"
    android:layout_marginTop="10dp"
    style="@style/btn"
    android:text="修 改"
       android:layout_gravity="center"
    />
</LinearLayout>
</ScrollView>
</LinearLayout>
