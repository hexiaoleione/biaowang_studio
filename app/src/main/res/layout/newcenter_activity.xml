<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    android:orientation="vertical" >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#fa7024"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:src="@drawable/back1" />

            <ImageView
                android:id="@+id/btnRight"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/btnLeft"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/mess" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="个人中心"
                android:textColor="@color/whites"
                android:textSize="16sp" />
        </RelativeLayout>
        <ScrollView 
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    android:orientation="vertical"
            >
               <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
            >
<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
             >

               <ImageView
                android:id="@+id/img_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/ren3" />

               <TextView
                   android:id="@+id/txt_username"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/img_head"
                   android:layout_centerHorizontal="true"
                   android:text="@string/cneterusername"
                   android:textColor="@color/black"
                   android:layout_marginTop="5dp"
                   android:textSize="15sp" />

               <ImageView
                   android:id="@+id/level"
                   android:layout_width="15dp"
                   android:layout_height="13dp"
                   android:layout_alignBottom="@+id/txt_username"
                   android:layout_marginLeft="14dp"
                   android:layout_toRightOf="@+id/txt_username"
                   android:background="@drawable/v1" />

                <RatingBar
                    android:id="@+id/level_rating"
                    style="@style/ratinglev_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/txt_username"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
             android:background="@color/white"
             android:layout_marginTop="10dp"
             >
		<View
		    android:layout_width="1dp"
		    android:layout_height="match_parent"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		      android:layout_centerHorizontal="true"
		    android:background="@color/grayview1"
   />
		<LinearLayout 
		    android:id="@+id/btn_share"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="30dp"
	         android:orientation="vertical" 
		    >
		      <ImageView
                   android:id="@+id/btn_sharess"
                   android:layout_width="20dp"
                   android:layout_height="18dp"
                   android:src="@drawable/fenxian" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignLeft="@+id/btn_sharess"
                   android:layout_below="@+id/btn_sharess"
                   android:gravity="center_vertical"
                   android:shadowColor="#99999900"
                   android:layout_marginTop="2dp"
                   android:text="分享"
                   android:textColor="@color/grayview1"
                   android:textSize="12sp" />
		</LinearLayout>
             <LinearLayout 
                  android:id="@+id/saomiao"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
	         android:orientation="vertical" 
		    >
		      <ImageView
                   android:id="@+id/saomiaoss"
                   android:layout_width="20dp"
                   android:layout_height="18dp"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/saomiaode" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignLeft="@+id/saomiaoss"
                   android:layout_below="@+id/saomiaoss"
                   android:gravity="center_vertical"
                   android:shadowColor="#99999900"
                   android:layout_marginTop="2dp"
                   android:text="加盟商扫码登录"
                   android:textColor="@color/grayview1"
                   android:textSize="12sp" />
		</LinearLayout>


  </RelativeLayout>
  </LinearLayout>
  <View
		    android:layout_width="match_parent"
		    android:layout_height="10dp"
		    android:background="@color/huise" />
  <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
         android:orientation="vertical" 
      >
  <LinearLayout
       android:id="@+id/ll_wallet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="个人财产"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
    <LinearLayout
        android:id="@+id/ll_shunfeng"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="人人代理"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
      <LinearLayout
           android:id="@+id/ll_realname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="角色认证"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
         android:visibility="gone"
        android:background="#33aaaaaa"
        />
      <LinearLayout
          android:id="@+id/ll_function"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="功能介绍"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
      <LinearLayout
             android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="意见反馈"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
    <LinearLayout
             android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="我要理赔"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
    <LinearLayout
          android:id="@+id/ll_caozuo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="操作指南"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
      <LinearLayout
          android:id="@+id/ll_about"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="关于"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <View 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_right"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33aaaaaa"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tui"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
       android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ll_shutdown"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="退出登录"
            android:textSize="13sp"
            android:textColor="@color/orange1"
            android:gravity="center_vertical" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
