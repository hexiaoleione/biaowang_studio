<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/rl_luck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gift_bba"
            android:scaleType="fitXY" >

            <com.hex.express.iwant.views.TitleBarView
                android:id="@+id/tbv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tbv_show"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="152dp"
                android:gravity="center"
                android:text="正在加载中。。。"
                android:textColor="@color/yellow"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/llayout_trake1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_gift" >

                <LinearLayout
                    android:id="@+id/ll_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="44dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1.0"
                        android:text=""
                        android:textColor="@color/yellow"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/status2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.0"
                        android:text=""
                        android:textColor="@color/yellow"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/status3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_gift_left"
                        android:layout_weight="1.0"
                        android:text=""
                        android:textColor="@color/yellow"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/status4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_gift_left"
                        android:layout_weight="1.0"
                        android:text=""
                        android:textColor="@color/yellow"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/status5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_gift_left"
                        android:layout_weight="1.0"
                        android:text=""
                        android:textColor="@color/yellow"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/status6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_gift_left"
                        android:layout_weight="1.0"
                        android:text=""
                        android:textColor="@color/yellow"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/status7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_gift_left"
                        android:layout_weight="1.0"
                        android:text=""
                        android:textColor="@color/yellow"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_number"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@id/ll_num"
                    android:layout_gravity="center"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="44dp"
                    android:layout_marginTop="14dp" >

                    <com.kankan.wheel.widget.WheelView
                        android:id="@+id/slot_1"
                        android:layout_width="0dp"
                        android:layout_height="106dp"
                        android:layout_weight="1.0" />

                    <com.kankan.wheel.widget.WheelView
                        android:id="@+id/slot_2"
                        android:layout_width="0dp"
                        android:layout_height="106dp"
                        android:layout_weight="1.0" />

                    <com.kankan.wheel.widget.WheelView
                        android:id="@+id/slot_3"
                        android:layout_width="0dp"
                        android:layout_height="106dp"
                        android:layout_weight="1.0" />

                    <com.kankan.wheel.widget.WheelView
                        android:id="@+id/slot_4"
                        android:layout_width="0dp"
                        android:layout_height="106dp"
                        android:layout_weight="1.0" />

                    <com.kankan.wheel.widget.WheelView
                        android:id="@+id/slot_5"
                        android:layout_width="0dp"
                        android:layout_height="106dp"
                        android:layout_weight="1.0" />

                    <com.kankan.wheel.widget.WheelView
                        android:id="@+id/slot_6"
                        android:layout_width="0dp"
                        android:layout_height="106dp"
                        android:layout_weight="1.0" />

                    <com.kankan.wheel.widget.WheelView
                        android:id="@+id/slot_7"
                        android:layout_width="0dp"
                        android:layout_height="106dp"
                        android:layout_weight="1.0" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_mix"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_below="@id/ll_number"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bar_b"
                    android:text="开始"
                    android:layout_marginTop="-8dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fashion"
                    android:layout_below="@id/btn_mix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="20dp"
                    android:text="抽奖规则"
                    android:textColor="@color/orange1"
                    android:textSize="16sp" />
                <View android:layout_width="wrap_content"
                     android:layout_below="@id/fashion"
                    android:layout_alignLeft="@id/fashion"
                    android:layout_alignRight="@id/fashion"
                    android:layout_height="1dp"
                    android:background="@color/orange1"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>