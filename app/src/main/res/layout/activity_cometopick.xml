<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.hex.express.iwant.views.TitleBarView
        android:id="@+id/tbv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="@string/cometopicksender"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imagv_addpeople1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/courier" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_cometopicksendername"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="@string/cometopicksendername"
                android:textSize="15sp" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/devide_line"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_cometopicksendermobile"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="@string/cometopicksendermobile"
                android:maxLength="14"
                android:textSize="15sp" />

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/devide_line"
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgv_people1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/peoplemoblie" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="@string/cometopicksenderaddress"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_senderaddress1"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:hint="@string/cometopicksenderaddresslist"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devide_line" />

            <EditText
                android:id="@+id/edt_senderaddress2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/transparent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devide_line" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgv_location1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/location" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/devide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="@string/cometopickaddressee"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imagv_addpeople2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/courier" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_cometopickaddresseename"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="@string/cometopicksendername"
                android:textSize="15sp" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/devide_line"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_cometopickaddresseemobile"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="@string/cometopicksendermobile"
                android:maxLength="14"
                android:textSize="15sp" />

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/devide_line"
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgv_people2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/peoplemoblie" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="@string/cometopicksenderaddress"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_addresseeAddress1"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:hint="@string/cometopicksenderaddresslist"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devide_line" />

            <EditText
                android:id="@+id/edt_addresseeAddress2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/transparent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devide_line" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgv_location2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/location" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/devide_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/devide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:padding="5dp"
            android:text="@string/cometopickmathname"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_mathname"
            style="@style/text_normal_box"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:hint="@string/cometopickmathnameinput"
            android:padding="5dp"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line" />

    <Button
        android:id="@+id/btn_oksend"
        style="@style/btn"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/oksend"
        android:textSize="15sp" />

</LinearLayout>