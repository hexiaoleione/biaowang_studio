<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/infor_shows"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#fa7024"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:src="@drawable/back1" />

            <ImageView
                android:id="@+id/btnRight"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignBaseline="@+id/btnLeft"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="我要出发啦"
                android:textColor="@color/whites"
                android:textSize="16sp" />
        </RelativeLayout>
    <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    > 
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    
    android:layout_marginTop="10dp"
    >
    <TextView 
      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物信息"
        android:textSize="19sp"
        />
</LinearLayout>

<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/delver_img_head"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ren3"
                android:visibility="gone" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/delver_img_head"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

            
            <LinearLayout
                android:layout_width="match_parent"
                 android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ee"
                    android:layout_weight="1"
                android:layout_toRightOf="@+id/delver_img_head"
                android:paddingBottom="5dp" >

                <TextView 
          android:id="@+id/delver_huoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
        android:text="货物名字"
        android:layout_weight="1"
          android:textSize="13sp"
        />

                <TextView
                    android:id="@+id/delver_logoffer_jiazhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="价值"
                    android:visibility="gone"
                       android:layout_weight="1"
                    android:textSize="13sp" />

            </LinearLayout>
            <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="发货地: "
        android:textSize="13sp" />

    <com.hex.express.iwant.views.MarqueeTextView
        android:id="@+id/delver_fahuodizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lines="1"
          android:layout_centerVertical="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="北京市昌平区"
        android:textSize="12sp" />
</RelativeLayout>
            <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView2"
        android:text="目的地: "
        android:textSize="13sp" />

    <com.hex.express.iwant.views.MarqueeTextView
        android:id="@+id/delver_dadaodizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView2"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="北京市昌平区"
        android:textSize="12sp" />
</RelativeLayout>

<TextView 
          android:id="@+id/delver_dadaotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送达时间"
          android:textSize="13sp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="5dp"
        android:layout_weight="1"
        />
                <LinearLayout 
            android:layout_width="match_parent"
               android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ee"
                android:layout_toRightOf="@+id/delver_img_head"
                android:layout_marginTop="5dp"
                >
    <TextView 
        android:id="@+id/delver_zhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货物重量"
       android:layout_marginLeft="20dp"    
      android:layout_weight="1"
          android:textSize="13sp"
        />
      <TextView 
          android:id="@+id/delver_tiji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="货物体积"
        android:layout_weight="1"
          android:textSize="13sp"
        />
      
</LinearLayout>

</LinearLayout>
        </RelativeLayout>
        <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
    >
      <TextView
          android:id="@+id/delver_quhuo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:layout_weight="1"
          android:layout_marginRight="25dp"
            android:textSize="13sp"
          android:text="需要取货"
          android:textColor="@color/orange1" />
      <TextView 
        android:id="@+id/delver_fahuotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发货时间"
        android:layout_weight="1"
        android:visibility="gone"
          android:textSize="13sp"
        />
       <TextView
        android:id="@+id/delver_songhuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:text="需要送货"
          android:textSize="13sp"
          android:layout_weight="1"
        android:textColor="@color/orange1" />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
     android:layout_marginLeft="20dp"
     android:visibility="gone"
    >
  
      
</LinearLayout>





<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
     android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/delver_shouhuoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货人姓名"
        android:layout_weight="1"
          android:textSize="13sp"
        />
      <TextView 
          android:id="@+id/delver_lianxifangshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="联系方式"
          android:textSize="13sp"
        android:layout_weight="1"
        />
      
</LinearLayout>
<LinearLayout
                android:id="@+id/ee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/delver_img_head"
                android:paddingBottom="5dp" >


                <TextView
                    android:id="@+id/delver_logoffer_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="姓名"
                   android:layout_weight="1"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/delver_logoffer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_weight="1"
                    android:text="联系方式"
                    android:textSize="13sp" />

            </LinearLayout>
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_marginTop="5dp"
    >
    <TextView 
        android:id="@+id/delver_beizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
        android:text="备注"
          android:textSize="13sp"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
     android:background="@color/white"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
        android:text="出发前请拍至少一张货物图片"
       android:textColor="@color/red"
       android:layout_marginTop="5dp"
        />
<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"
    >
    <ImageView 
        android:id="@+id/delver_img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/carmer_bg180"
        />
      <ImageView
          android:id="@+id/delver_img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
         android:layout_marginRight="10dp"
        android:background="@drawable/carmer_bg180"
        />
        <ImageView 
           android:id="@+id/delver_img3"
         android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
         android:layout_marginRight="10dp"
        android:background="@drawable/carmer_bg180"
        />
        
</LinearLayout>
    <TextView 
		    		    android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/orange"
                        android:text="填写正确的车牌号，保险才能理赔"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:textSize="11sp"/>
       <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                      android:layout_gravity="center"
                    android:orientation="horizontal" >
			<TextView 
		    		    android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="填写车牌号:"
                        android:textSize="13sp"/>
			
			<RelativeLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="13dip"
        android:layout_marginRight="13dip"
        android:layout_marginTop="5dp"
         >
<!-- bg_input_middle_normal -->
        <EditText
            android:id="@+id/input_et"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/input_arrow"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:hint="填写正确的车牌号"
            android:imeOptions="actionNext"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/input_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_down"
            android:contentDescription="@string/app_name"
            android:onClick="onDownArrowClicked" />
    </RelativeLayout>

		<EditText
		    android:id="@+id/hai_carnumber"
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"
		    android:background="@null"
		    android:hint="请输入起运车牌号"
		    android:inputType="text"
		    android:paddingLeft="5dp"
		    android:textSize="12sp" 
		    android:visibility="gone"
		    />

		</LinearLayout>

<Button 
        android:id="@+id/delver_but"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        style="@style/btn"
        android:text="确认取货"
        />
</LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>
