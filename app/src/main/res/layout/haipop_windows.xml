<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:gravity="center"
    android:orientation="vertical" >
    <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/huise"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/linearl_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="温馨提示"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnsaves_pan"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_orange_to_gray_rouded"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tet_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"
            android:text="确认收款后，平台将会把冻结的相应金额支付给发件人"
            android:textColor="@color/graywhite2" />
    </RelativeLayout>

</RelativeLayout>
</LinearLayout>
